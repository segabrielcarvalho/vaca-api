{
   "$schema": "https://json.schemastore.org/nest-cli",
   "collection": "@nestjs/schematics",
   "sourceRoot": "src",
   "compilerOptions": {
      "deleteOutDir": true,
      "assets": [
         {
            "include": "**/*.hbs",
            "outDir": "dist/src"
         },
         {
            "include": "**/*.png",
            "outDir": "dist/src"
         }
      ],
      "watchAssets": true
   }
}